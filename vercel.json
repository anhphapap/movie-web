{
  "redirects": [
    {
      "source": "/",
      "destination": "/trang-chu",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(sitemap\\.xml|robots\\.txt)",
      "destination": "/$1"
    },
    {
      "source": "/:path((?!api|_next|assets|.*\\.(?:js|css|jpg|jpeg|png|webp|avif|ico|woff|woff2|ttf|svg|xml|txt)$).*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(googlebot|bingbot|yandex|duckduckbot|baiduspider|facebookexternalhit|twitterbot|linkedinbot)"
        }
      ],
      "destination": "https://needflex-prerender.onrender.com/:path"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public,max-age=31536000,immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|webp|avif|ico|js|css|woff2|ttf|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public,max-age=31536000,immutable"
        }
      ]
    }
  ]
}
